<Page x:Class="Biblioteka.Views.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dodaj użytkownika">
    <Grid Margin="20">
        <!-- Przycisk Powrót -->
        <Button Name="BackButton"
                Content="← Powrót"
                Width="80" Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BackButton_Click"/>

        <!-- Formularz dodawania -->
        <StackPanel Width="350"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Dodaj nowego użytkownika"
                       FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Login:" Margin="0,0,0,5"/>
            <TextBox    Name="LoginBox"   Margin="0,0,0,10"/>

            <TextBlock Text="Hasło:" Margin="0,0,0,5"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>

            <TextBlock Text="Powtórz hasło:" Margin="0,0,0,5"/>
            <PasswordBox Name="ConfirmBox" Margin="0,0,0,20"/>

            <CheckBox  Name="IsAdminCheck"
                       Content="Administrator"
                       Margin="0,0,0,20"/>

            <Button Name="AddButton"
                    Content="Dodaj użytkownika"
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
