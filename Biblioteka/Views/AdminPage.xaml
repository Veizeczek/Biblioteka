<Page x:Class="Biblioteka.Views.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Administrator">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Panel Administratora" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />
            <Button Content="Zarządzaj książkami" Width="200" Click="ManageBooks_Click" Margin="0,0,0,10" />
            <Button Content="Zarządzaj użytkownikami" Width="200" Click="ManageUsers_Click" Margin="0,0,0,10" />
            <Button Content="Historia" Width="200" Click="History_Click" Margin="0,0,0,10" />
            <Button Content="Ustawienia" Width="200" Click="Settings_Click" Margin="0,0,0,10" />
            <Button Content="Wyloguj" Width="200" Click="Logout_Click" />
        </StackPanel>
    </Grid>
</Page>