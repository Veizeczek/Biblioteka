<Page x:Class="Biblioteka.Views.ForgotPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Odzyskaj hasło">
    <Grid Margin="20">
        <!-- Back button at top-left -->
        <Button Name="BackButton" Content="← Powrót" Width="80" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="BackButton_Click" />

        <!-- Password recovery form centered -->
        <StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Odzyskaj hasło" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />
            <TextBlock Text="Login:" Margin="0,0,0,5" />
            <TextBox Name="LoginBox" Margin="0,0,0,10" />
            <TextBlock Text="Pytanie pomocnicze:" Margin="0,0,0,5" />
            <ComboBox Name="QuestionCombo" Margin="0,0,0,10" />
            <TextBlock Text="Odpowiedź:" Margin="0,0,0,5" />
            <TextBox Name="AnswerBox" Margin="0,0,0,20" />
            <Button Name="RecoverButton" Content="Odzyskaj hasło" Width="150" Height="30" HorizontalAlignment="Center"
                    Click="RecoverButton_Click" />
        </StackPanel>
    </Grid>
</Page>