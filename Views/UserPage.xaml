<Page x:Class="Biblioteka.Views.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Użytkownik">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Panel Użytkownika" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />
            <Button Content="Przeglądaj dostępne książki" Width="200" Click="BrowseBooks_Click" Margin="0,0,0,10" />
            <Button Content="Moje wypożyczenia" Width="200" Click="MyLoans_Click" Margin="0,0,0,10" />
            <Button Content="Historia" Width="200" Click="History_Click" Margin="0,0,0,10" />
            <Button Content="Ustawienia" Width="200" Click="Settings_Click" Margin="0,0,0,10" />
            <Button Content="Wyloguj" Width="200" Click="Logout_Click" />
        </StackPanel>
    </Grid>
</Page>