<Page x:Class="Biblioteka.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Zaloguj się do Biblioteki" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />
            <TextBlock Text="Login:" Margin="0,0,0,5" />
            <TextBox Name="LoginBox" HorizontalAlignment="Stretch" Margin="0,0,0,10" />
            <TextBlock Text="Hasło:" Margin="0,0,0,5" />
            <PasswordBox Name="PasswordBox" HorizontalAlignment="Stretch" Margin="0,0,0,20" />
            <Button Name="LoginButton" Content="Zaloguj" Height="30" HorizontalAlignment="Stretch" Margin="0,0,0,10" Click="LoginButton_Click" />
            <Button Name="RegisterButton" Content="Zarejestruj się" Height="30" HorizontalAlignment="Stretch" Margin="0,0,0,10" Click="RegisterButton_Click" />
            <Button Name="ForgotButton" Content="Zapomniałem hasła" Height="30" HorizontalAlignment="Stretch" Click="ForgotButton_Click" />
        </StackPanel>
    </Grid>
</Page>