<Page x:Class="Biblioteka.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Rejestracja">
    <Grid Margin="20">
        <!-- Back button at top-left -->
        <Button Name="BackButton" Content="← Powrót" Width="80" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="BackButton_Click" />

        <!-- Registration form centered -->
        <StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Załóż nowe konto" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />
            <TextBlock Text="Login:" Margin="0,0,0,5" />
            <TextBox Name="LoginBox" Margin="0,0,0,10" />
            <TextBlock Text="Hasło:" Margin="0,0,0,5" />
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10" />
            <TextBlock Text="Powtórz hasło:" Margin="0,0,0,5" />
            <PasswordBox Name="ConfirmBox" Margin="0,0,0,10" />
            <TextBlock Text="Pytanie pomocnicze:" Margin="0,0,0,5" />
            <ComboBox Name="QuestionCombo" Margin="0,0,0,10" />
            <TextBlock Text="Odpowiedź:" Margin="0,0,0,5" />
            <TextBox Name="AnswerBox" Margin="0,0,0,20" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="RegisterButton" Content="Zarejestruj się" Width="150" Click="RegisterButton_Click" Margin="0,0,10,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>