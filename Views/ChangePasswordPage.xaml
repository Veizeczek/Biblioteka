<Page x:Class="Biblioteka.Views.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Zmień hasło">
    <Grid Margin="20">
        <!-- Back button at top-left -->
        <Button Name="BackButton" Content="← Powrót" Width="80" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="BackButton_Click" />

        <!-- Change password form centered -->
        <StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Zmiana hasła" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

            <TextBlock Text="Nowe hasło:" Margin="0,0,0,5" />
            <PasswordBox Name="NewPasswordBox" Margin="0,0,0,10" />

            <TextBlock Text="Powtórz nowe hasło:" Margin="0,0,0,5" />
            <PasswordBox Name="ConfirmBox" Margin="0,0,0,20" />

            <Button Name="ChangeButton" Content="Zmień hasło" Width="150" Height="30" HorizontalAlignment="Center"
                    Click="ChangeButton_Click" />
        </StackPanel>
    </Grid>
</Page>